    <script>
        // THE LOGIC
        let currentBid = 100;
        let timeLeft = 30;
        const bidDisplay = document.getElementById('bid-amount');
        const timerDisplay = document.getElementById('timer');
        const feed = document.getElementById('feed');

        function placeBid(amount) {
            currentBid += amount;
            bidDisplay.innerText = currentBid;
            
            // Reset timer so people keep fighting for it
            timeLeft = 15; 
            
            // Add to status feed
            const entry = document.createElement('p');
            entry.innerText = `[LOG] A Sigma just added +${amount} Aura!`;
            feed.prepend(entry);

            // Simple "shake" visual
            document.querySelector('.item-card').style.borderColor = "#fff";
            setTimeout(() => {
                document.querySelector('.item-card').style.borderColor = "#ff00ff";
            }, 100);
        }

        // Countdown timer loop
        const timerInterval = setInterval(() => {
            if (timeLeft > 0) {
                timeLeft--;
                timerDisplay.innerText = timeLeft;
            } else {
                timerDisplay.innerText = "SOLD (L + RATIO)";
                document.querySelector('.controls').style.display = 'none';
                clearInterval(timerInterval);
            }
        }, 1000);
    </script>
